<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.upb.agripos.controller.ProductManagementController">
    <Label text="Manajemen Stok Produk - Admin" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Cari Produk (Kode/Nama/Kategori)" prefWidth="300"/>
        <Button fx:id="btnCari" text="Cari" prefHeight="30" style="-fx-padding: 5 20;"/>
        <Button fx:id="btnReset" text="Reset" prefHeight="30" style="-fx-padding: 5 15;"/>
    </HBox>
    
    <TableView fx:id="tableProducts" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colKode" text="Kode" prefWidth="100"/>
            <TableColumn fx:id="colNama" text="Nama Produk" prefWidth="200"/>
            <TableColumn fx:id="colKategori" text="Kategori" prefWidth="120"/>
            <TableColumn fx:id="colHarga" text="Harga" prefWidth="120"/>
            <TableColumn fx:id="colStok" text="Stok" prefWidth="80"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnTambah" text="Tambah Produk" style="-fx-padding: 10; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button fx:id="btnEdit" text="Edit" style="-fx-padding: 10; -fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="btnHapus" text="Hapus" style="-fx-padding: 10; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
    
    <Label text="ðŸ“Œ Fitur: Klik 'Tambah Produk' untuk tambah data, pilih baris untuk Edit/Hapus" 
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
</VBox>