<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.upb.agripos.controller.LoginController" style="-fx-background-color: #f4f4f4;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="AGRI-POS LOGIN" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="txtUsername" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="txtPassword" promptText="Password" maxWidth="250"/>
    <Button fx:id="btnLogin" text="Login" onAction="#handleLogin" prefWidth="100" 
            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
</VBox>