<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.upb.agripos.controller.ReportController">
    <Label text="Laporan Penjualan" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <DatePicker fx:id="dateFrom" promptText="Dari Tanggal"/>
        <DatePicker fx:id="dateTo" promptText="Sampai Tanggal"/>
        <Button fx:id="btnCari" text="Cari" prefHeight="30" style="-fx-padding: 5 20;"/>
    </HBox>
    
    <TableView fx:id="tableTransactions" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTransId" text="ID Transaksi" prefWidth="100"/>
            <TableColumn fx:id="colDate" text="Tanggal" prefWidth="150"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Total Pendapatan:" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblTotalPendapatan" text="Rp 0" style="-fx-font-size: 14px; -fx-text-fill: #27ae60;"/>
    </HBox>
    
    <Label text="ðŸ“Œ Pilih tanggal untuk melihat laporan penjualan pada periode tersebut" 
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
</VBox>