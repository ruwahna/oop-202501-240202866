<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.upb.agripos.controller.MainViewController">
    <top>
        <VBox style="-fx-padding: 15; -fx-background-color: #34495e;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="AgriPOS - Sistem Kasir Pertanian" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label fx:id="lblUser" text="User: " style="-fx-text-fill: #ecf0f1; -fx-font-size: 12;"/>
                    <Button text="Logout" onAction="#handleLogout" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 15;"/>
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <TabPane fx:id="tabPane" xmlns="http://javafx.com/javafx/8">
            <tabs>
                <Tab fx:id="tabTransaksi" text="Transaksi (Kasir)" closable="false">
                    <fx:include source="TransactionView.fxml"/>
                </Tab>
                <Tab fx:id="tabStokProduk" text="Stok Produk (Admin)" closable="false">
                    <fx:include source="ProductManagementView.fxml"/>
                </Tab>
                <Tab fx:id="tabLaporan" text="Laporan Penjualan" closable="false">
                    <fx:include source="ReportView.fxml"/>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>