<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.upb.agripos.controller.ReportController" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <Label text="Laporan Pendapatan Agri-POS" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="15.0" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Dari Tanggal:"/>
            <DatePicker fx:id="dateFrom" />
        </VBox>
        <VBox spacing="5">
            <Label text="Sampai Tanggal:"/>
            <DatePicker fx:id="dateTo" />
        </VBox>
        <Button text="Tampilkan Laporan" onAction="#handleGenerateReport" prefHeight="45"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Separator />

    <GridPane hgap="20" vgap="20">
        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" 
              GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="300">
            <Label text="Total Pendapatan" style="-fx-font-size: 14px;"/>
            <Label fx:id="lblTotalRevenue" text="Rp 0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
        </VBox>

        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" 
              GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300">
            <Label text="Jumlah Transaksi" style="-fx-font-size: 14px;"/>
            <Label fx:id="lblTotalTransactions" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
        </VBox>
    </GridPane